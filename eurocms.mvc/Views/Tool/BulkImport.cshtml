@{
    ViewBag.Title = "BulkImport";
}



<div class="portlet box grey">
    <div class="portlet-title">
        <div class="caption"><i class="icon-reorder"></i>Bulk Import</div>
    </div>
    <div class="portlet-body">
        @using (Html.BeginForm("BulkArticleCreate", "Tool", FormMethod.Post, new { @class = "form-horizontal", @id = "zEdit", enctype = "multipart/form-data" }))
        {
            @Html.ValidationSummary(true)
            <div class="row-fluid">
                <div class="control-group">
                    <label class="control-label" for="xmlTemplate">Xml Template:</label>
                    <div class="controls">
                        <a href="~/Content/files/Bulk Import Deneme.xml">Download Xml File</a>
                    </div>
                </div>
            </div> 
            <div class="row-fluid">
                <div class="control-group">
                    <label class="control-label" for="excelTemplate">Excel Template:</label>
                    <div class="controls">
                        <a href="~/Content/files/Bulk Import Deneme.xlsx">Download Excel File</a>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="control-group">
                    <label class="control-label" for="upload">Upload:</label>
                    <div class="controls">
                        <input class="m-wrap span5" type="file" name="upload" id="upload" />
                    </div>
                </div>
            </div> 

            <div class="form-actions">
                <button class="btn blue">Save <i class="icon-save"></i></button>
            </div>

        }
    </div>
</div>