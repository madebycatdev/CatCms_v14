@{
    Layout = null;
}

@using (Html.BeginForm("Create", "HiddenValue", FormMethod.Post, new { @class = "form-horizontal", @id = "hiddenCreate" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        <h3>Create New Hidden Value:</h3>
    </div>
    <div class="modal-body">
        <div class="row-fluid">
            <div class="control-group">
                <label class="control-label" for="hidden_value">Hidden Value: <span class="red">*</span></label>
                <div class="controls">
                    <input class="span11 m-wrap" type="text" id="hidden_value" name="hidden_value">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="hidden_type">Type: <span class="red">*</span></label>
                <div class="controls">
                    <select class="span11 m-wrap" id="hidden_type" name="hidden_type">
                        <option value="0">Querystring</option>
                        <option value="1">Cookie</option>
                        <option value="2">Session</option>
                    </select>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="hidden_desc">Description:</label>
                <div class="controls">
                    <textarea class="span11 m-wrap" id="hidden_desc" name="hidden_desc" rows="3"></textarea>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" data-dismiss="modal" class="btn"><i class="icon-remove"></i> Close</button>
        <button type="submit" class="btn blue"><i class="icon-save"></i> Save & Close</button>
    </div>
}