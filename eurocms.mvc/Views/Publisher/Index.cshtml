@model  IList<EuroCMS.Admin.entity.cms_asp_select_publishers_Result>

<!-- BEGIN SAMPLE FORM PORTLET-->   

<p>
    <a class="btn red openModal" href="@Url.Action("Create")">Create New Publisher <i class="m-icon-swapright m-icon-white"></i></a>
</p>

<div class="row-fluid">
    <div class="span12">
        <div class="portlet box grey">
            <div class="portlet-title">
                <div class="caption"><i class="icon-reorder"></i>Publisher List</div>
            </div>
            <div class="portlet-body">
                <a href="#editPublisher" data-toggle="modal" id="modalOpen" class="hide">Edit Publisher</a>
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Publisher Name(s)</th>
                            <th>E-mail</th>
                            <th>Created By</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if(Model.Count > 0)
                        {
                            foreach (var publisher in Model)
                            { 
                                <tr>
                                    <td>@publisher.publisher_id</td>
                                    <td>@publisher.publisher_name</td>
                                    <td>@publisher.publisher_email</td>
                                    <td>@publisher.created</td>
                                    <td>
                                        <a href="@Url.Action("Edit", new { id= @publisher.publisher_id })" class="btn icn-only black editObject"><i class="icon-pencil"></i></a>
                                        <a href="@Url.Action("Delete", new { id= @publisher.publisher_id })" class="btn icn-only black" onclick="deleteObject(this); return false;" data-message="Are you sure want to delete this publisher?"><i class="icon-trash"></i></a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr><td colspan="4">No Result Found!</td></tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- END SAMPLE TABLE PORTLET-->


