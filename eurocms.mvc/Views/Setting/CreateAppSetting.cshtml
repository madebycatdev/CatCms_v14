@model System.Configuration.KeyValueConfigurationElement

@{
    Layout = null;
}
 
@*<div class="modal" tabindex="-1" data-width="760">*@
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        <h3>Create/Update</h3>
    </div>
    @using (Html.BeginForm("UpdateAppSetting", "Setting", FormMethod.Post, new { id = ViewContext.RouteData.Values["id"] }))
    {
        <div class="modal-body">
            <div class="row-fluid">
                    @Html.AntiForgeryToken()
                    <div class="control-group">
                        <label class="control-label" for="SettingKey">Setting Key:</label>
                        <div class="controls">
                            @Html.TextBox("SettingKey", Model != null ? Model.Key : "", new { @class= "m-wrap span12" })
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="SettingValue">Setting Value:</label>
                        <div class="controls">
                            @Html.TextBox("SettingValue", Model != null ? Model.Value : "", new { @class= "m-wrap span12" })
                        </div>
                    </div>
            
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" type="button"><i class="icon-remove"></i> Cancel</button> <button class="btn green" type="submit"><i class="icon-save"></i> Save</button>
        </div>
    }
@*</div>*@