@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/Login.cshtml";
}

<h3 class="form-title">EuroCMS Forgot Password</h3>

<p>
     Use the form below to remember your password. Your <i>new password</i> will send to registered email address in a few minutes.
</p>

 @Html.CmsValidationSummary("")

 @using (Html.BeginForm()) 
 { 
     @Html.AntiForgeryToken()
    
     <div class="control-group">
		<!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
		<label class="control-label visible-ie8 visible-ie9">Your Email or Username</label>
		<div class="controls">
			<div class="input-icon left">
				<i class="icon-user"></i>
                @Html.TextBox("emailorusername", "", new { @placeholder="Username", @class="m-wrap placeholder-no-fix required"}) 
                @Html.ValidationMessage("emailorusername") 
	        </div>
		</div>
	</div>
    <div class="form-actions">
		<button type="submit" class="btn red pull-right">
		    Submit <i class="m-icon-swapright m-icon-white"></i>
		</button>            
	</div>
} 
