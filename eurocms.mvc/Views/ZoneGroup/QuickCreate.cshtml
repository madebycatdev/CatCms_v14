@{
    Layout = null;
}

@using (Html.BeginForm("Create", "ZoneGroup", new { id = ViewContext.RouteData.Values["id"], ReturnUrl = Request.QueryString["ReturnUrl"] }, FormMethod.Post, new { @id = "zCreate" })) 
{ 
    @Html.ValidationSummary(true) 
    @Html.AntiForgeryToken()
    <input type="hidden" value="@ViewBag.site_id" name="site_id" />

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        <h3>Quick Create Zone Group:</h3>
    </div>
    <div class="modal-body">
        <div class="row-fluid">
            <div class="control-group">
                <label class="control-label" for="zone_group_name">Zone Group Name:<span class="red">*</span></label>
                <div class="controls">
                    <input type="text" name="zone_group_name" id="zone_group_name" class="span12" value="" required/>
                </div>
            </div>
        </div>
        <div class="row-fluid">
            <div class="control-group">
                <label class="control-label" for="template_id">Default Screen Template:<span class="red">*</span></label>
                <div class="controls">
                    @Html.GroupDropList("template_id", ViewBag.Layouts as List<GroupDropListItem>, "0", new { @class = "span12 required" }, "Please Select")
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" data-dismiss="modal" class="btn"><i class="icon-remove"></i> Close</button>
        <button type="submit" class="btn blue"><i class="icon-save"></i> Save & Close</button>
    </div>
    <!-- Bunların dışında eklemek istediğin bir alan var ise normal edit ve create view'lerinden alıp ekleyebilirsin -->
 }