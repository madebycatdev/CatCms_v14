@model EuroCMS.Admin.entity.cms_asp_select_zone_group_details_Result

@{
    
    Layout = null;
}

@using (Html.BeginForm("Edit", "ZoneGroup", new { id = ViewContext.RouteData.Values["id"], ReturnUrl = Request.QueryString["ReturnUrl"] }, FormMethod.Post, new { @class = "form-horizontal", @id = "zCreate" })) 
{ 
    @Html.ValidationSummary(true) 
    @Html.AntiForgeryToken()
    <input type="hidden" value="@Model.site_id" name="site_id" /> <!-- site_id olmadan işlem yapılamayacagından bunu kontrol etmeye gerek yok. -->
    
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        <h3>Quick Edit Zone Group:</h3>
    </div>
    <div class="modal-body">
        <div class="row-fluid">
            <div class="control-group">
                <label class="control-label" for="zone_group_name">Zone Group Name:<span class="red">*</span></label>
                <div class="controls">
                    <input type="text" name="zone_group_name" id="zone_group_name" class="span12" value="@Model.zone_group_name" required/>
                </div>
            </div>
        </div>
        <div class="row-fluid">
            <div class="control-group">
                <label class="control-label" for="template_id">Default Screen Template:<span class="red">*</span></label>
                <div class="controls">
                    @Html.GroupDropList("template_id", ViewBag.Layouts as List<GroupDropListItem>, Model.template_id.ToString(), new { @class ="span12 required"}, "Please Select")
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" data-dismiss="modal" class="btn"><i class="icon-remove"></i> Close</button>
        <button type="submit" class="btn blue"><i class="icon-save"></i> Save & Close</button>
    </div>  
 }