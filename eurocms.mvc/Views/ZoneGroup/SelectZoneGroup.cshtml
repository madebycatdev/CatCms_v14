 
@{
    Layout = null;
}

@using (Html.BeginForm("SelectArticle", "Site", FormMethod.Post, new { @class = "form-horizontal" }))
{
  <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        <h3>Select Article:</h3>
    </div>
    <div class="modal-body">
        <div class="row-fluid">
            <form class="form">
                <div class="control-group">
                    <label class="control-label" for="site">Site:</label>
                    <div class="controls">
                         @Html.GroupDropList("site_id", ViewBag.Sites as List<GroupDropListItem>, "", new { @class = "span12 m-wrap", @onchange="getZoneGroupList(this)" } , "Please Select")
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="zGroup">Zone Group:</label>
                    <div class="controls">
                        @Html.GroupDropList("zone_group_id", ViewBag.ZoneGroups as List<GroupDropListItem>, "", new { @class = "zGroup span12 m-wrap", @onchange="getZoneList(this)" } , "Please Select")
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="zone">Zone:</label>
                    <div class="controls">
                        <select name="zone" tabindex="1" data-placeholder="Choose a Category" multiple="multiple" class="zone span12 m-wrap" onchange="getArticleList(this)">
                        </select>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="domain_Article">Articles:</label>
                    <div class="controls">
                        <select name="domain_Article" tabindex="1" data-placeholder="Choose a Category" multiple="multiple" class="article span12 m-wrap" ondblclick="addList('@Request.QueryString["objName"]',this),false;">
                        </select>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" data-dismiss="modal" class="btn">Close</button>
        <button type="button" class="btn blue" id="saveClose" onclick="addList('@Request.QueryString["objName"]',this),false;">Save & Close</button>
    </div>   
}

