<div class="row-fluid">
	<div class="span3 no-left-margin margin-bottom-10">
		<a class="btn blue" href="@Url.Action("Create")">Create New Css <i class="icon-circle-arrow-right"></i></a>
	</div>
	<div class="span9">
		@using (Html.BeginForm("Index", "Css", FormMethod.Get, new { @class = "form-horizontal", @id = "viewCss" }))
{
		<div class="control-group">
			<div class="controls controls-row">
				<label class="control-label span3" for="GroupID">Group:</label>
				@Html.DropDownList("GroupID", ViewBag.Groups as IEnumerable<SelectListItem>, "Not Grouped", new { @class ="m-wrap span6 margin-bottom-10"})
				<button class="btn span3" type="submit">Go <i class="icon-search"></i></button>
			</div>
		</div>
		}
	</div>
</div>

<div class="row-fluid">
    <div class="span12">
        <div class="portlet box grey">
            <div class="portlet-title">
                <div class="caption"><i class="icon-reorder"></i>Css List</div>
            </div>
            <div class="portlet-body">
				<div class="no-more-tables">
					<table class="table table-striped table-hover">
						<thead>
							<tr>
								<th>#</th>
								<th>Css Name</th>
								<th>Created</th>
								<th>Actions</th>
							</tr>
						</thead>
						<tbody>
								@if(Model.Count > 0)
								{
									int i = 1;
									foreach (var _css in Model)
									{ 
										
										<tr>
											<td data-title="#"> @i </td>
											<td data-title="Css Name"> [@_css.css_id] @_css.css_name </td>
											<td data-title="Created"> @_css.created bssy @_css.publisher_name </td>
											<td data-title="Actions"> 
												<a href="@Url.Action("Edit", new { id= @_css.css_id,IsRevision="false"})" class="btn icn-only margin-bottom-5" title="Edit This Layout"><i class="icon-pencil"></i></a>
												<a href="@Url.Action("Revisions", new { id= @_css.css_id })" class="btn icn-only margin-bottom-5" title="View This Revisions"><i class="icon-list"></i></a>
												@using (Html.BeginForm("Delete", "Css", new { id = @_css.css_id }))
												{ 
													@Html.AntiForgeryToken()
													<button type="submit" class="btn icn-only red margin-bottom-5" data-message="Are you sure want to delete this css?" onclick="return deleteObject(this);"><i class="icon-trash"></i></button>
												}
											</td>
										</tr>
										i++;
									}
							   }
							   else
							   {
									<tr><td colspan="4">No Result Found!</td></tr>
							   }
						</tbody>
					</table>
				</div>
            </div>
        </div>
    </div>
</div>
<!-- END SAMPLE TABLE PORTLET-->