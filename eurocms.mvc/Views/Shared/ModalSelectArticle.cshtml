 
<div id="selectArticle" class="modal hide" tabindex="-1" data-width="760">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        <h3>Select Article:</h3>
    </div>
    <div class="modal-body">
        <div class="row-fluid">
            <form class="form">
                <div class="control-group">
                    <label class="control-label" for="zGroup">Zone Group:</label>
                    <div class="controls">
                        @Html.GroupDropList("ZoneGroupID", EuroCMS.Admin.Common.Bags.GetZoneGroupsBySite(null, null) as List<GroupDropListItem>, "-1", new { @class = "m-wrap zGroup span12", @onchange = "getZoneList(this)" }, "All Zone Groups")
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="Zone">Zone:</label>
                    <div class="controls">
                        <select tabindex="1" data-placeholder="Choose a Category" multiple="multiple" class="m-wrap zone span12" onchange="getArticleList(this)">
                        </select>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="article">Articles:</label>
                    <div class="controls">
                        <select tabindex="1" data-placeholder="Choose a Category" multiple="multiple" class="m-wrap article span12">
                        </select>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" data-dismiss="modal" class="btn"><i class="icon-remove"></i> Close</button>
        <button type="button" class="btn green" id="saveClose"><i class="icon-save"></i> Save & Close</button>
    </div>
</div>